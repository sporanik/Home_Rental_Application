<%- include('../partials/head') %>
</head>
<body class="bg-gray-100">
  <%- include('../partials/nav') %>

  <main class="container mx-auto px-4 py-10 max-w-6xl">
    <h2 class="text-3xl text-red-500 font-bold text-center mb-10">
      Here are your favourites:
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8" style="width: 300px; height:400px;">
      <% favouriteHomes.forEach(home => { %>
        <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition duration-300 overflow-hidden">
          <img 
            src="<%= home.photoUrl %>" 
            alt="<%= home.houseName %>" 
            class="w-full h-48 object-cover" 
            style="width: 320px; height: 400px;"
          >
          <div class="p-4">
            <h3 class="text-xl font-semibold text-gray-800 mb-1">
              <%= home.houseName %>
            </h3>
            <p class="text-gray-600 text-sm mb-3">
              <i class="fas fa-map-marker-alt mr-2"></i><%= home.location %>
            </p>
            <div class="flex justify-between items-center mb-3">
              <span class="text-lg font-bold text-red-500">
                Rs <%= home.price %> / night
              </span>
              <span class="text-yellow-500 text-sm">
                ‚≠ê <%= home.rating %>
              </span>
            </div>
            <form action="/favourites/delete/<%= home._id %>" method="POST">
              <button 
                type="submit" 
                class="w-full bg-red-500 hover:bg-red-600 text-white text-sm py-2 px-4 rounded-md transition"
              >
                Remove from favourite
              </button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>
