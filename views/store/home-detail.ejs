<%- include('../partials/head') %>
</head>
<body class="bg-gray-100">
  <%- include('../partials/nav') %>

  <main class="container mx-auto px-4 py-10 max-w-6xl bg-white shadow-lg rounded-lg">
    <h2 class="text-3xl text-red-500 font-bold text-center mb-8">
      Details of <%= home.houseName %>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Image -->
      <div class="rounded-lg overflow-hidden w-full h-[400px]">
        <img 
          src="<%= home.photoUrl %>" 
          alt="<%= home.name %>" 
          class="w-full h-full object-cover"
        >
      </div>

      <!-- Info Section -->
      <div class="space-y-6">
        <!-- Description -->
        <div class="border-b pb-4">
          <h3 class="text-xl font-semibold text-gray-800 mb-2">Description</h3>
          <p class="text-gray-600 text-sm"><%= home.description %></p>
        </div>

        <!-- Location -->
        <div class="border-b pb-4">
          <h3 class="text-xl font-semibold text-gray-800 mb-2">Location</h3>
          <p class="text-gray-600 text-sm"><%= home.location %></p>
        </div>

        <!-- Price -->
        <div class="border-b pb-4">
          <h3 class="text-xl font-semibold text-gray-800 mb-2">Price</h3>
          <p class="text-red-600 text-xl font-bold">Rs <%= home.price %> / night</p>
        </div>

        <!-- Rating -->
        <div class="border-b pb-4">
          <h3 class="text-xl font-semibold text-gray-800 mb-2">Rating</h3>
          <div class="flex items-center text-yellow-500">
            <span class="text-lg">‚≠ê <%= home.rating %></span>
          </div>
        </div>

        <!-- Favourite Button -->
        <div class="pt-2">
          <%- include('../partials/favourite') %>
        </div>
      </div>
    </div>
  </main>
</body>
</html>
